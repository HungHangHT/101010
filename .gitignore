import pygame

pygame.init()

screen = pygame.display.set_mode((500, 600))

YELLOW = (252, 244, 3)
WHITE = (255,255,255)

running = True

while running:
    screen.fill(YELLOW)
    for event in pygame.event.get():
       if event.type == pygame.QUIT:
            running = False
       if event.type == pygame.MOUSEBUTTONDOWN:
          if event.button == 1:
               print("xxx")
       
    pygame.display.flip()
